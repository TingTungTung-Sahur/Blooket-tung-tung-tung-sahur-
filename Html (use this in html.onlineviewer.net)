<body><h1>Unlimited Bookmarklet Generator</h1>
<div class="container">  <textarea id="jsInput" placeholder="Write your JavaScript here..."></textarea><button onclick="generateBookmarklet()">Generate Bookmarklet</button>

  <div id="output"></div>
</div><script>
function generateBookmarklet() {
  let code = document.getElementById("jsInput").value.trim();
  if (!code) {
    alert("Please enter JavaScript first.");
    return;
  }

  let bookmarklet = "javascript:" + encodeURIComponent(code);

  let box = document.createElement("a");
  box.className = "bookmarklet-box";
  box.href = bookmarklet;
  box.textContent = "Drag me!";

  document.getElementById("output").appendChild(box);
}
</script></body>
</html>
